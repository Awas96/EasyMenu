{% extends 'layout.html.twig' %}

{% block title %}Eliminar Usuario{% endblock %}
{% block estilos %}
    <link rel="stylesheet" href="{{ asset('css/formulario.css') }}"/>
{% endblock %}
{% block content %}
    <div class="contenido">
        <div class="formulario p-5">
            <h1 class="p-1">Eliminar Usuario</h1>
            <p class="p-1" >¿Seguro que deseas eliminar el usuario <b>{{ usuario.username }}</b>"?</p>
            <p class="p-1 font-weight-bolder">Esta acción no se puede deshacer.</p>

            <form method="post">
                <button class="btn btn-danger" type="submit" name="confirmar">Sí, eliminar</button>
                <a class="btn btn-info" href="{{ path('app_panel') }}">No, Cancelar</a>
            </form>
        </div>
    </div>
{% endblock %}

