<ul type="none" class="displayFlex fondoSecciones overflow-auto">
    {% for sec in seccion %}
        <div class="burbuja burbuja_fondo">
            <li>
                <a class="relleno" href="{{ path('indexSec', {'sec': sec.id} ) }}">
                    <div>
                        {% if sec.icono %}
                            <i class="fas {{ sec.icono }}"></i>
                        {% else %}
                            <i class="fas fa-utensils"></i>
                        {% endif %}
                    </div>
                    <div>{{ sec.nombre }}</div>
                </a>
            </li>
        </div>
    {% endfor %}
</ul>

