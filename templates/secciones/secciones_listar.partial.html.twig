        <li>
            <a class="relleno" href="{{ path('seccion_nueva' ) }}">
                <div>
                    <i class="fas fa-plus"></i>
                </div>
                <div>Nueva Secci√≥n</div>
            </a>
        </li>
    </div>
</ul>

