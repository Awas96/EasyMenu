{% extends 'layout.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block estilos %}
    <link rel="stylesheet" href="{{ asset('css/formulario.css') }}"/>
{% endblock %}
{% block content %}
    <div class="contenido">
        <div class="formulario texto_grande ">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Estas dentro como usuario: {{ app.user.username }}, <a
                                href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal">Introduzca sus credenciales!</h1>
                <label class="margen_abajo" for="inputUsername"><i class="fas fa-user"></i>&nbspUsuario</label>
                <input type="username" value="{{ last_username }}" name="username" id="inputusername"
                       class="form-control"
                       required autofocus>
                <label class="margen_abajo margen_arriba" for="inputPassword"><i class="fas fa-lock"></i>&nbspContrase√±a</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html #}


                <div class="checkbox mb-3 margen_arriba">
                    <label>
                        <input type="checkbox" name="_remember_me"> Recuerdame
                    </label>
                </div>


                <div class="botones margen_arriba">
                    <button class="btn btn-lg btn-primary boton" type="submit">
                        <i class="fas fa-sign-in-alt"></i>&nbsp
                        Entrar
                    </button>
                </div>

            </form>
        </div>
    </div>
{% endblock %}
